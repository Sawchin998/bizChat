<h1>All Messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Receiver</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.user.email %></td>
        <td><%= message.receiver_type == "User" ? message.receiver.email : message.receiver.name %></td>
        <td><%= message.created_at.strftime("%m/%d/%Y %I:%M %p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Message", new_message_path %>
