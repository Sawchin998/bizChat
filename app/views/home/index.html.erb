<div class="homepage">
  <div class="sidebar">
    <div class="top-item">
      <%= link_to "#" do %>
        <%= image_tag "biz.png" %>
      <% end %>
    </div>
    <div class="middle-item">
      <%= link_to "#" do %>
        <%= image_tag "chat.png" %>
      <% end %>
    </div>
    <div class="buttom-item">
      <%= link_to "#" do %>
        <%= image_tag "settings.png" %>
      <% end %>
    </div>
  </div>

  <div class="left-section">
    <div class="left-item1">
      <div class="left-item1-chat">
        Chat
      </div>
      <div class="left-item1-avatar">
        <% if current_user.avatar.present? %>
          <%= image_tag current_user.avatar%>
        <% else %>
          <%= image_tag "aaa.jpeg" %>
        <% end%>
      </div>
      <div class="left-item1-name">
        <%= current_user.name%>
      </div>
    </div>

    <div class="left-item2">
      <div class="add-new1">
        <%= link_to "#" do %>
          <%= image_tag "add_new.png" %>
        <% end %>
      </div>
      <div class="left-item2-channels">
        Channels
      </div>
      <div class="left-item2-channel">
        <% current_user.groups.each do |group| %>
          <div class="group-lists">
            <%= link_to "#" do %>
              <% if group.avatar.present? %>
                <%= image_tag group.avatar%>
              <% else %>
                <%= image_tag "aaa.jpeg" %>
            <% end%>
            <% end%>
            <div class="group-name"> 
              <%= group.name%>
            </div>
          </div>
        <% end %>
      </div>
    </div>




    <div class="left-item3">
      <div class="add-new1">
        <%= link_to "#" do %>
          <%= image_tag "add_new.png" %>
        <% end %>
      </div>
      <div class="left-item3-chats">
        Chats
      </div>
        <div class="left-item3-search">
          <%= form_for :search, url: "home/search", method: :post do |f| %>
          <%= f.text_field :query, placeholder: 'Search' %>
          <%= button_tag type: "submit", class: "btn btn-primary", data: {turbo_frame: "search-frame"} do %>
            <%= image_tag "Magnifier.png" %>
          <% end %>
        <% end %>
      </div>
    </div>

    
    <div class="left-item4">
      <%= turbo_frame_tag "search-frame" do%>
        <div class="left-item4-all">
          All
        </div>
        <div class="chat-list">
          <% @conversations.each do |c| %>
            <div class="conversation">
            <%= c%> 
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>



  
  <div class="middle-section">
    
  </div>
  
  <div class="right-section">
  </div>
</div>
