<div class="homepage">
  <div class="sidebar">
    <div class="top-item">
      <%= image_tag "biz.png" %>
    </div>
    <div class="middle-item">
      <%= image_tag "chat.png" %>
    </div>
    <div class="buttom-item">
      <%= link_to edit_user_registration_path, data: { turbo_frame: "update-user"} do %>
        <%= image_tag "settings.png" %>
      <% end %>
    </div>
  </div>

  <div class="left-section">
    <div class="left-item1">
      <div class="left-item1-chat">
        Chat
      </div>
      <div class="left-item1-avatar">
        <% if current_user.avatar.present? %>
          <%= image_tag current_user.avatar%>
        <% else %>
          <% if current_user.gender == "male"%>
            <%= image_tag "male_avatar.png" %>
          <% else %>
            <%= image_tag "female_avatar.png" %>
          <% end %>
        <% end%>
      </div>
      <div class="left-item1-name">
        <%= current_user.name%>
      </div>
    </div>

    <div class="left-item2">
      <div class="add-new1">
        <%= link_to new_group_path, data: {turbo_frame: "add-group"} do %>
          <%= image_tag "add_new.png" %>
        <% end %>
      </div>
      <div class="left-item2-channels">
        Channels
      </div>
      <div class="left-item2-channel">
        <% current_user.groups.each do |group| %>
          <div class="group-lists">
            <%= link_to "#" do %>
                <%= image_tag "aaa.jpeg" %>
            <% end%>
            <div class="group-name"> 
              <%= group.name%>
            </div>
          </div>
        <% end %>
      </div>
    </div>




    <div class="left-item3">
      <div class="left-item3-chats">
        Chats
      </div>
        <div class="left-item3-search">
        <%= form_for :search, url: 'home/search', method: :post do |f| %>
          <%= f.text_field :query, name: 'query', placeholder: 'Search' %>
          <%= button_tag type: "submit", data: { turbo_frame: "search-frame"} do %>
            <%= image_tag "Magnifier.png" %>
          <% end %>
        <% end %>
      </div>
    </div>

    
    <div class="left-item4">
      <%= turbo_frame_tag "search-frame" do%>
        <div class="left-item4-all">
          All
        </div>
        <div class="chat-list">
          <% @conversations.each do |c| %>
            <div class="conversation">
              <%= c.receiver_id%> 
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>



  
  <div class="middle-section">
    <%= turbo_frame_tag  "add-group" do%>
      <%= turbo_frame_tag  "update-user" do%>
       ghfhgfhg
      <% end %>
    <% end %>
  </div>
  
  <div class="right-section">
  </div>
</div>
