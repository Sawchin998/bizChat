<div class="forgot-container">
  <div class="main-text">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="bizz-chat">
        <span class="bizz">biz</span> <span class="chat">chat</span>
      </div>
      <h3 style="color: #736D6D">Forgot your password ?</h3>
      <h6 style="color: #736D6D">Enter your registered email to reset password.</h6>
      
      <%= render "devise/shared/notice"%>

      <div class="field">
        <%= f.label :Email_address %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= render "devise/shared/error_messages", resource: resource, attribute: :email %>
      </div>

      <div class="actions">
        <%= f.submit "Send" %>
      </div>
      <h4><%= link_to "Log in", new_session_path(resource_name), style: 'color: #BE263B' %></h4>
      <h4><%= link_to "Create new account", new_registration_path(resource_name), style: 'color: #BE263B'%></h4>
    <% end %>


  </div>
  <div class="image-container2">
    <div>
      <%= image_tag "fig2.png" %>
    </div>
  </div>
</div>
