<div class="outer">
  <div class="main-text">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="bizz-chat">
      <span class="bizz">biz</span> <span class="chat">chat</span>
    </div>
    <h3 style="color: #736D6D">Reset your password</h3>
    
    <%= render "devise/shared/notice"%>

    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password %>
      <%= render "devise/shared/error_messages", resource: resource, attribute: :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation %>
      <%= render "devise/shared/error_messages", resource: resource, attribute: :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
    <h4><%= link_to "Log in", new_session_path(resource_name), style: 'color: #BE263B' %></h4>
    <h4><%= link_to "Create new account", new_registration_path(resource_name), style: 'color: #BE263B'%></h4>
    <% end %>
  </div>
</div>

